<li class="list-group-item {{if item.done 'disabled' }}">
  {{#if isEditing}}
    <form class="form-inline">
      <div class="form-group">
        {{input type='text' placeholder='Tarefa' value=item.task class='form-control'}}
      </div>
      <button {{action 'update'}} class="btn btn-primary" >Gravar</button>
      <button {{action 'cancelEdit'}} class="btn btn-default">Voltar</button>
    </form>
  {{else}}
    <h5 class="{{if item.done 'strike'}}">
      {{input type="checkbox" class="toogle" checked=item.done click=(action "onClickDone")}}
      {{item.task}}
      <div class="actions">
        <a {{action 'edit'}} href class="edit">
          <span class="glyphicon glyphicon-pencil"></span>
        </a>
        <a {{action 'remove' todo}} href class="remove-todo">
          <span class="glyphicon glyphicon-remove"></span>
        </a>
      </div>
    </h5>
  {{/if}}
</li>
